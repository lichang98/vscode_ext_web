{
	"name": "darwin2",
	"displayName": "darwin2",
	"description": "VSCode Darwin2 IDE extension",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:darwin2.helloWorld",
		"onWebviewPanel:darwin2web",
		"onCommand:itemClick",
		"onCommand:treeView.opt",
		"onCommand:treeView.viewFunc",
		"onCommand:convertor.opt",
		"onCommand:convertor.viewFunc",
		"onCommand:simulator.opt",
		"onCommand:simulator.viewFunc",
		"onView:multiLevelTree",
		"onView:treeView-item",
		"onCommand:treeView-item.newproj",
		"onCommand:treeView-item.datavis",
		"onCommand:treeView-item.import",
		"onCommand:convertor.new_proj"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "darwin2.helloWorld",
				"title": "darwin2"
			},
			{
				"command": "multiLevelTree.newproj",
				"title": "new_proj",
				"icon":"src/resources/project.png"
			},
			{
				"command": "treeView-item.datavis",
				"title": "可视化",
				"icon":"src/resources/vis.png"
			},
			{
				"command": "treeView-item.newproj",
				"title": "创建新的项目",
				"icon":"src/resources/project.png"
			},
			{
				"command": "treeView-item.import",
				"title": "导入",
				"icon":"src/resources/import.png"
			},
			{
				"command": "explorer.testright",
				"title": "测试右键"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "treeView-item.newproj",
					"when": "view == treeView-item",
					"group": "inline"
				}
			],
			"view/item/context": [
				{
					"command": "treeView-item.datavis",
					"when": "view == treeView-item && viewItem == 数据 || viewItem == 模型",
					"group": "navigation"
				},
				{
					"command": "treeView-item.import",
					"when": "view == treeView-item && viewItem == 训练数据 || viewItem == 测试数据 || viewItem == 测试数据标签 || viewItem == 模型",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"command": "explorer.testright",
					"group": "navigation"
				}
			]
		},
		"viewsContainers": {                        
			"activitybar": [                        
				{
					"id": "treeView",               
					"title": "转换器",            
					"icon": "src/resources/dep.png",
					"command":"convertor.new_proj"
				},
				{
					"id": "convertor",
					"title": "转换",
					"icon": "src/resources/convert.png"
				},
				{
					"id": "simulator",
					"title": "仿真器",
					"icon": "src/resources/simulate_run.png"
				},
				{
					"id": "lang_convertor",
					"title": "darwinLang转换",
					"icon": "src/resources/imgs/lang_convert.png"
				}
			]
		},
		"views": {                                  
			"treeView": [                           
				{
					"id": "treeView-item",          
					"name": "",                 
					"when": ""                      
				}
			],
			"convertor":[
				{
					"id": "item_convertor",
					"name": "item_convertor",
					"when": ""
				}
			],
			"simulator":[
				{
					"id": "item_simulator",
					"name": "item_simulator",
					"when": ""
				}
			],
			"lang_convertor":[
				{
					"id": "item_darwinLang_convertor",
					"name": "item_darwinLang_convertor",
					"when": ""
				}
			],
			"explorer": [
				{
					"id": "multiLevelTree",
					"name": "multiLevelTree"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack --config ./build/node-extension.webpack.config.js",
		"watch": "webpack --watch --config ./build/node-extension.webpack.config.js",
		"package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1",
		"ts-loader": "^8.0.11",
		"webpack": "^5.10.0",
		"webpack-cli": "^4.2.0"
	}
}
